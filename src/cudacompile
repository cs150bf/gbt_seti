LOCALDEFS=../path_setup.sh
if [ -f "${LOCALDEFS}" ]
then
    source "${LOCALDEFS}"
else
    echo "WARNING: Local environment files '${LOCALDEFS}' not present."
fi
nvcc -c guppi2spectra_gpu.cu -o guppi2spectra_gpu.o
gcc -O3 -Wall -fno-strict-aliasing -DFOLD_USE_INTRINSICS -I$PRESTO/include -I/usr/include/cfitsio -I/usr/include/mysql guppi2spectra.c -o $SETI_GBT/bin/gpuspec guppi2spectra_gpu.o  guppi_error.o guppi_params.o guppi_time.o write_psrfits.o read_psrfits.o misc_utils.o hget.o hput.o sla.o chkio.o -L$PRESTO/lib -lcfitsio -L$SETI_GBT/lib -lsla -lm -lpthread -I/usr/include/cfitsio -lcudart -I$CUDA_PATH/include -L$CUDA_PATH/lib64  -lcufft

